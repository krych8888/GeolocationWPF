        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeolocationAppWpf"
        xmlns:views="clr-namespace:GeolocationAppWpf.Views"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" 
        Width="800"
        FontSize="14"
        SizeToContent="Height">
    <Grid Margin="20 20 20 60" MaxWidth="600">
        <views:GeolocationFinderView DataContext="{Binding CurrentViewModel}"/>
    </Grid>
